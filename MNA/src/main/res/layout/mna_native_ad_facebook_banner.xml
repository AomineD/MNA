<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/banner_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white_nt"
    android:visibility="visible">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ad_icon_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <TextView
        android:id="@+id/title_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:gravity="start"
        android:text="@string/loading_ad"
        android:textAlignment="textStart"
        android:textColor="@color/black_nt"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/sponsor_adw"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:fontFamily="@font/roboto"
        android:padding="2dp"
        android:text="Loading"
        android:textColor="@color/black_nt"
        android:textSize="12sp"
        android:visibility="visible" />



    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/button_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_vertical"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/blue_fb">

        <TextView
            android:id="@+id/callto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Install"

            android:textColor="@color/white_nt" />

    </androidx.cardview.widget.CardView>
</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/sponsor_ad"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/black_nt"
                android:textSize="12sp"
                android:visibility="visible" />

        <ImageView
            android:id="@+id/ad_choices"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            >


        </ImageView>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>